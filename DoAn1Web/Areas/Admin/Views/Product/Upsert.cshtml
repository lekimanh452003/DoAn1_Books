@model ProductVM
<div class="card shadow border-0 mt-4 ">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text center">
				<h2 class="text" >@(Model.Product.Id!=0?"Cập nhật":"Thêm") sách </h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="Product.Id" hidden/>
			<input asp-for="Product.ImageUrl" hidden />

			<div class="row">
				<div class="col-10">
					<div class="border p-3 mt-4">
						<div class="mb-3 row">
							<label asp-for="Product.Title" class="p-0">Tên sách</label>
							<input asp-for="Product.Title" type="text" class="form-control" />
							<span asp-validation-for="Product.Title" class="text-danger"></span>
						</div>
						<div class="mb-3 row">
							<label asp-for="Product.CategoryId" class="p-0">Thể loại</label>
							<select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
								<option disabled selected>--Thể loại--</option>
							</select>
							<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
						</div>
						<div class="mb-3 row">
							<label asp-for="Product.Author " class="p-0">Nghệ sĩ</label>
							<input asp-for="Product.Author" type="text" class="form-control" />
							<span asp-validation-for="Product.Author" class="text-danger"></span>
						</div>
						
						<div class="mb-3 row">
							<label asp-for="Product.Price" class="p-0">Đơn giá</label>
							<input asp-for="Product.Price" type="text" class="form-control" />
							<span asp-validation-for="Product.Price" class="text-danger"></span>
						</div>
						<div class="mb-3 row">
							<label asp-for="Product.ReleaseDate" class="p-0">Ngày phát hành</label>
							<input asp-for="Product.ReleaseDate" type="text" class="form-control" />
							<span asp-validation-for="Product.ReleaseDate" class="text-danger"></span>
						</div>

						<div class="mb-3 row">
							<label asp-for="Product.Description" class="p-0">Mô tả</label>
							<input asp-for="Product.Description" type="text" class="form-control" />
							<span asp-validation-for="Product.Description" class="text-danger"></span>
						</div>

						<div class="mb-3 row">
							<label asp-for="Product.ImageUrl" class="p-0">Hình ảnh</label>
							<input asp-for="Product.ImageUrl" type="file" name="file" class="form-control" />
						</div>

						<div class="row">
							@if (Model.Product.Id != 0)
							{
								<button type="submit" class="btn btn-primary border form-control" style="width:50%">Cập nhật</button>
							}
							else
							{
								<button type="submit" class="btn btn-primary border form-control" style="width:50%">Thêm</button>
							}
							<a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control" style="width:50%">
								Trở lại
							</a>
						</div>
					</div>
				</div>
				<div class="col-2">
					<img src="@Model.Product.ImageUrl" width="100%"
						 style="border-radius:5px; border:1px solid #bbb9b9" />
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	}