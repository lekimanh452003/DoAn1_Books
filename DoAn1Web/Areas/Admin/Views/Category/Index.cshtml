@model List<Category>
<partial name="_Notification" />
<div class="container">
	<div class="row pt-4 pb-2">
		<div class="col-6">
			<h2>Thể loại</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-cloud-plus"></i> Thêm danh mục
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thread>
			<tr>
				<th>
					Tên thể loại
				</th>
				<th>
					Hiển thị
				</th>
				<th></th>
			</tr>
		</thread>
		<tbody>
			@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@obj.CategoryName</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil"></i> Sửa
							</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-delete mx-2">
								<i class="bi bi-trash"></i> Xóa
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>